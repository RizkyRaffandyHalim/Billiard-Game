{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build SFML",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "GameManager.cpp",
        "Ball.cpp",
        "CueBall.cpp",
        "Table.cpp",
        "Hole.cpp",
        "CueStick.cpp",
        "Score.cpp",
        "Menu.cpp",
        "-I",
        "C:/SFML/SFML-2.6.1/include",
        "-L",
        "C:/SFML/SFML-2.6.1/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-mwindows",
        "-o",
        "billiard.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
